# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Indentation settings
indent_style = space
indent_size = 2

# End-of-line settings
end_of_line = lf

# Character set
charset = utf-8

# Trim trailing whitespace on save
trim_trailing_whitespace = true

# Add a final newline at the end of files
insert_final_newline = true

# Maximum line length (optional, adjust as needed)
# max_line_length = 80

[*.md]
# Markdown files often use a different indentation style
indent_style = space
indent_size = 4

[{package.json,.prettierrc,tsconfig.json}]
# JSON files might be formatted differently by tools
indent_style = space
indent_size = 2